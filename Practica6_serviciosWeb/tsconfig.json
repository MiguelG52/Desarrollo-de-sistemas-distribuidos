{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "es6",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
}